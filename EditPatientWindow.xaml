<Window x:Class="Hosreg1.EditPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування пацієнта" 
        Height="657" 
        Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Форма редагування -->
        <StackPanel>

            <GroupBox Header="Особисті дані" Height="324">
                <StackPanel Margin="5">
                    <Label Content="ПІБ:"/>
                    <TextBox x:Name="NameTextBox" 
                             Margin="0,0,0,10"/>

                    <Label Content="Телефон:"/>
                    <TextBox x:Name="PhoneTextBox" 
                             Margin="0,0,0,10"/>

                    <Label Content="Дата народження:"/>
                    <DatePicker x:Name="BirthDatePicker" 
                               Margin="0,0,0,10"/>

                    <Label Content="Адреса:"/>
                    <TextBox x:Name="AddressTextBox" 
                             Margin="0,0,0,10"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Системні дані" Height="195">
                <StackPanel Margin="5">
                    <Label Content="Логін:"/>
                    <TextBox x:Name="LoginTextBox" 
                             Margin="0,0,0,10"/>

                    <Label Content="Пароль:"/>
                    <PasswordBox x:Name="PasswordBox" 
                                Margin="0,0,0,10" Height="38"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Зберегти" 
                    Click="SaveButton_Click" 
                    Width="100" 
                    Margin="0,0,10,0"/>
            <Button Content="Скасувати" 
                    Click="CancelButton_Click" 
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>